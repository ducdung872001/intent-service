{
  "get_revenue_by_customer": {
    "service": "finance",
    "endpoint": "/revenue/total_revenue_customer",
    "method": "POST",
    "required_params": ["fromTime", "toTime"],
    "at_least_one": ["phone", "email", "code"],
    "optional_params": ["name"],
    "result_field": "reply",
    "response_type": "scalar",
    "description": "Lấy tổng doanh thu trong khoảng thời gian của khách hàng hoặc đối tác"
  },
  "get_revenue_by_contract": {
    "service": "finance",
    "endpoint": "/revenue/total_revenue_contract",
    "method": "POST",
    "required_params": ["fromTime", "toTime"],
    "at_least_one": ["contractNo", "contractName"],    
    "result_field": "reply",
    "response_type": "scalar",
    "description": "Lấy tổng doanh thu trong khoảng thời gian của hợp đồng"
  },
  "get_debt_by_customer": {
    "service": "finance",
    "endpoint": "/revenue/total_debt_customer",
    "method": "POST",
    "required_params": ["fromTime", "toTime"],
    "at_least_one": ["phone", "email", "code"],
    "optional_params": ["name"],
    "result_field": "reply",
    "response_type": "scalar",
    "description": "Lấy tổng công nợ khách hàng hoặc đối tác trong khoảng thời gian"
  },
  "get_debt_by_contract": {
    "service": "finance",
    "endpoint": "/revenue/total_debt_contract",
    "method": "POST",
    "required_params": ["fromTime", "toTime"],
    "at_least_one": ["contractNo", "contractName"],    
    "result_field": "reply",
    "response_type": "scalar",
    "description": "Lấy công nợ trong khoảng thời gian của hợp đồng"
  },
  "list_top_branches": {
    "service": "finance",
    "endpoint": "/api/revenue/top",
    "method": "GET",
    "required_params": ["limit"],
    "optional_params": ["month", "year"],
    "response_type": "list",
    "description": "Danh sách các chi nhánh có doanh thu cao nhất."
  },
  "get_revenue_detail": {
    "service": "finance",
    "endpoint": "/api/revenue/detail",
    "method": "GET",
    "required_params": [
      "branch_name",
      "start_date",
      "end_date"
    ],
    "response_type": "object",
    "description": "Chi tiết doanh thu theo ngày hoặc danh mục."
  }
}
